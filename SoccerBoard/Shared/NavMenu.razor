@inject IGameHttpRepository Ighr;
<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Soccer Board (@selectedGame?.Id)</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Games
            </NavLink>
        </li>
    </ul>
</div>


@code {

    private bool collapseNavMenu = true;
    private Game selectedGame;
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override void OnInitialized()
    {

        this.Ighr.OnGameSelectedEvent -= this.OnGameSelectedEvent;
        this.Ighr.OnGameSelectedEvent += this.OnGameSelectedEvent;
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    public void OnGameSelectedEvent()
    {
        selectedGame = this.Ighr.SelectedGame;
        StateHasChanged();
    }
}
